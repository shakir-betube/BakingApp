<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/recipe_ingredient_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding"
        android:text="@string/ing_title_temp"
        android:textSize="20sp" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/recipe_ingredient_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantity_temp"
            android:layout_marginRight="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recipe_ingredient_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/measurement_temp"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>